# Configuración de finales de línea
* text=auto eol=lf

# Archivos binarios que deben mantenerse como están
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.pyc binary
*.pyo binary
*.pyd binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Archivos de texto específicos que deben mantener sus finales de línea
*.sh text eol=lf
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.svg text eol=lf
*.xml text eol=lf

# Archivos que no deben ser rastreados
.DS_Store export-ignore
Thumbs.db export-ignore
desktop.ini export-ignore

# Archivos de Python que no deben ser rastreados
__pycache__/ export-ignore
*.py[cod] export-ignore
*$py.class export-ignore

# Archivos de entornos virtuales
venv/ export-ignore
env/ export-ignore
.venv/ export-ignore
ENV/ export-ignore

# Archivos de configuración local
.env export-ignore
.env.local export-ignore
.env.*.local export-ignore

# Archivos de editor
.vscode/ export-ignore
.idea/ export-ignore
*.sublime-workspace export-ignore
